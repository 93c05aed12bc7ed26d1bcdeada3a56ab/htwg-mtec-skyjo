# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.skyjo

GET     /uncover/:posX/:posY/:player    controllers.HomeController.uncover(posY:Int, posX: Int, player:Int)
GET     /newPlayer/:player          controllers.HomeController.addPlayer(player: String)
GET     /about                      controllers.HomeController.about
GET     /newGame                    controllers.HomeController.newGame
GET     /drawCard                   controllers.HomeController.drawCard
GET     /tradeCard                  controllers.HomeController.tradeCard
GET     /undo                       controllers.HomeController.undo
GET     /redo                       controllers.HomeController.redo

GET     /json                       controllers.HomeController.load

GET     /websocket                  controllers.HomeController.socket

GET     /service-worker.js          controllers.Assets.at(path="/public", file="javascripts/service-worker.js")
GET     /manifest.json              controllers.Assets.at(path="/public", file="manifest.json")
GET     /sw.js                      controllers.Assets.at(path="/public", file="javascripts/sw.js")
GET     /offline                    controllers.HomeController.offline
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)